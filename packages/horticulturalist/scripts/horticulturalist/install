#!/bin/sh

install()
{
  local is_update="$1"
  shift 1

  local self="`realpath "$0"`"
  local base="`dirname -- "$self"`"

  source "$base/../medic-core/env" &&
  merge_environment /srv &&
  \
  source "$base/env" &&
  merge_environment /srv

  if [ "$is_update" ]; then
    echo "Updating version $PACKAGE_VERSION"
  else
    echo "Installing version $PACKAGE_VERSION"
    create_couch_user
  fi

  return "$?"
}

install "$@"
exit "$?"

